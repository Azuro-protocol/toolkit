{
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022",
    "types": ["node"]
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
